#include <stdio.h>
int main() {
 int a, b;
 char op;
 printf("=== Calculadora ===\n");
 printf("Digite a operacao (ex: 2 + 2): ");
 scanf("%d %c %d", &a, &op, &b);
 switch(op) {
 case '+': printf("Resultado: %d\n", a + b); break;
 case '-': printf("Resultado: %d\n", a - b); break;
 case '*': printf("Resultado: %d\n", a * b); break;
 case '/': printf("Resultado: %d\n", a / b); break;
 default: printf("Operador invalido.\n");
 }
 return 0;
}
